                //html += "<li class='layui-nav-item' data-lid='query' onclick='functionQuery()'><i class='layui-icon' style='font-size:25px'>&#xe615</i></li>";

                $('#moudleMenu').append(html);
            });

            app = layui.app,
               $ = layui.jquery
