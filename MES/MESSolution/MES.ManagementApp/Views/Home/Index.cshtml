        var _tabIndexNo = 0;

        var element, app, layer;
        var _curParams = null;
        var _leftMenuWidth = 40; //距离左边宽度
        var _leftDivOpenWidth = 160;
        var _updateIndex; //修改密码框

        layui.config({
